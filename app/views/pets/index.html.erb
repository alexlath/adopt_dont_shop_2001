<main>
  <h1>All Pets</h1>
  <% @pets.each do |pet| %>
    <h2><%= link_to pet.name, "/pets/#{pet.id}" %></h2>
    <div class="row">
      <div class="col-3">
        <%= image_tag pet.image %>
      </div>
      <div class="col-1">
      </div>
      <div class="col-4">
        <p>Approximate Age: <%= pet.approx_age %><br/>
        Sex: <%= pet.sex %><br/>
        Shelter: <%= link_to pet.shelter.name, "/shelters/#{pet.shelter.id}" %></p>
      </div>
      <div class="col-1">
      </div>
      <div class="col-2">
        <p><%= link_to "Update Pet", "/pets/#{pet.id}/edit" %><br/>
        <%= link_to "Delete Pet", "/pets/#{pet.id}", method: :delete %></p>
      </div>
    </div>
  <% end %>
</main>