<main>
  <%= image_tag @pet.image %><br/>
  <h1><%= @pet.name %></h1>
  <p><%= @pet.description %></p>
  <p><%= "Approximate Age: #{@pet.approx_age}" %><br/>
  <%= "Sex: #{@pet.sex}" %><br/>
  <%= "Status: #{@pet.status}" %></p>
  <p><%= link_to "Update Pet", "/pets/#{@pet.id}/edit" %></p>
  <p><%= link_to "Delete Pet", "#{@pet.id}", method: :delete %></p>
</main>