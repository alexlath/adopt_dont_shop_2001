<main>
  <h1><%= @pet.name %></h1>
  <div class="row">
    <div class="col-3">
      <p><%= image_tag @pet.image %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-4">
      <p>Approximate Age: <%= @pet.approx_age %><br/>
      Sex: <%= @pet.sex %><br/>
      Status: <%= @pet.status %><br/>
      <%= link_to "Update Pet", "#{@pet.id}/edit" %> |
      <%= link_to "Delete Pet", "#{@pet.id}", method: :delete %></p>
    </div>
    <div class="col-8">
      <p><%= @pet.description %></p>
    </div>
  </div>
</main>